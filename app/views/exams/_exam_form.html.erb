<%= form_for(@exam) do |f| %>
          
  <div class="form-group">
    <%= f.label t(".name") %>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
      <%= f.text_field :name, class: "form-control", placeholder: t(".name") %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label t(".time_limit") %>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
      <%= f.text_field :time_limit, class: "form-control", placeholder: t(".time_limit") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label t(".mark_require") %>
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
      <%= f.text_field :mark_require, class: "form-control", placeholder: t(".mark_require") %>
    </div>
  </div>
  
  <div class="form-group">
  <div class="row">
      <div class="col-xs-6">
        <%= f.label t(".start_date") %>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
          <%= f.datetime_field :start_date, class: "form-control", placeholder: t(".start_date") %>
        </div>
      </div>
    
      <div class="col-sm-5">
        <%= f.label t(".end_date") %>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
          <%= f.datetime_field :end_date, class: "form-control", placeholder: t(".end_date") %>
        </div>
      </div>
      </div>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-success btn-sm col-md-offset-4 col-md-4", id: "btn_add" %>
<% end %>
