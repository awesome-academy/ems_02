<% provide(:button_text, t(".save")) %>

<div class="row col-xs-12">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home"><%= t ".about" %></a></li>
    <li><a data-toggle="tab" href="#menu1"><%= t ".qs" %></a></li>
    <li><a data-toggle="tab" href="#menu2"><%= t ".exam" %></a></li>
    <li><a data-toggle="tab" href="#menu3"><%= t ".trainee" %></a></li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <%= render "subject_edit_form" %>
    </div>

    <div id="menu1" class="tab-pane fade">
      <div class="col-md-8">
        <%= link_to t(".create_question"), "#" %>
      </div>
      <div class="col-md-8">
          <h3><%= t".list" %> <%= @questions.size %></h3>
          <ul class="question">
            <% @questions.each do |question| %>
              <li>
                <span class="question"><%= link_to question.question_content, "#" %></span>
              </li>
            <% end %>
          </ul>
      </div>
    </div>

    <div id="menu2" class="tab-pane fade">
      <div class="col-md-8">
        <%= link_to t(".create_exam"), "#" %>
      </div>

      <div class="col-md-8">
        <h3><%= t".list_exam" %> (<%= @exams.size %>)</h3>
        <ul class="exam">
          <% @exams.each do |exam| %>
            <li>
              <span class="question"><%= link_to exam.name, "#" %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    
    <div id="menu3" class="tab-pane fade">
      <div class="col-md-8">
        <h3><%= link_to t(".total_trainee"), "#" %></h3>
      </div>
    </div>

  </div>
</div>
