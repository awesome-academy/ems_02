<% provide(:title, t(".login")) %>
<% if !current_user.nil? %>
  <% controller.redirect_to home_path(current_user) %>
<% end %>
<div class="sidenav">
  <div class="login-main-text">
    <h2><b><%= t ".title" %></b> <br/><%= t ".page_name" %></h2>
    <p><%= t ".description" %></p>
  </div>
</div>
<div class="main">
  <div class="col-md-6 col-sm-12">
    <div class="login-form">

      <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <%= f.label t(".email") %>
          <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
        </div>
        <div class="form-group">
          <%= f.label t(".password") %>
          <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
        </div>
        <%= f.submit t(".login"), class: "btn btn-black" %>
      <% end %>

    </div>
  </div>
</div>
